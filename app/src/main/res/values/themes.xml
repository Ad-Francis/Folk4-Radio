<resources>

    <!-- Base application theme. -->
    <style name="Theme.IF_Radio" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/bg_green</item>
    </style>

    <!-- Style for Radio Buttons -->
    <style name="RadioButtonsStyle">
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5dp</item>
    </style>

    <!-- Style for the Detect Song Button -->
    <style name="DetectButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/big_button_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Style for TextView -->
    <style name="InfoTextViewStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

</resources>